      <h1>New Game</h1>
      <div id="letters">
        <ul class="list-inline">
        <% @letters.each do |letter| %>
        <li class="list-inline-item lettercard"><%= letter %></li>
        <% end %>
        </ul>
      </div>
      <form action="/score" method="post">
        <div class="form-group">
          <label for="word" hidden>Enter your word</label>
          <input type="text" class="form-control" name="word" id="word" aria-describedby="wordhelp" placeholder="Enter a word..." required pattern="[A-z]+" title="Just letters">
          <small id="wordhelp" class="form-text text-muted">The word can use each of the letters above <em>once</em></small>
          <button type="submit" class="mt-2 btn btn-secondary">Check word</button>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
      </form>


